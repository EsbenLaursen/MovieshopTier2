<body>
    <h1 style="color:#ffd800; text-align:center"><b>@Model.Movie.Title</b></h1>




    <div class="div p myclass">

        <iframe width="800" height="450" src="@Model.Movie.TrailerUrl" frameborder="0" allowfullscreen class="btn-group"></iframe>
        <div class="btn-group" style="margin: 0px 0px 0px 30px; border: 5px solid grey; height: 450px">
            <div class="list-group">
                <a href="#" class="list-group-item" style="height: 35px; width: 200px; margin-top: 20px; margin-left: auto; margin-right: auto; display: block; background-color: grey">
                    <h4 class="list-group-item-heading" style="color: #ffd800;">Year : @Model.Movie.Year</h4>
                </a>
                <a href="#" class="list-group-item" style="height: 35px; width: 200px;  margin-left: auto; margin-right: auto; display: block; background-color: grey">
                    <h4 class="list-group-item-heading " style="color: #ffd800; ">Genre :  @foreach (var genre in Model.Movie.Genres)
                    {
                        <strong>  @genre.Name, </strong>
                    }</h4>
                </a>


                <img src="~/Content/Images/civilwar.jpg" height="220" width="160" style="display:block; margin-top: 20px; margin-left:auto; margin-right:auto" />
                <div class="addToCartBtn">
                    @using (Html.BeginForm("Added", "Movie", FormMethod.Post))
                    { 
                      <input type="hidden" name="id" value="@Model.Movie.Id" />
                       <input type="submit" class="btn btn-success" value="Add to cart (@Model.Movie.Price$)" />
                    }
                </div>

            </div>
        </div>
    </div>

        
